<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="xybank.com.chainsdk.MainActivity">

    <EditText
        android:id="@+id/real_name_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:hint="姓名"
        android:imeOptions="actionNext"
        android:maxLength="10"
        android:singleLine="true" />

    <EditText
        android:id="@+id/phone_mobile_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/real_name_et"
        android:layout_marginTop="10dp"
        android:hint="手机"
        android:imeOptions="actionNext"
        android:inputType="phone"
        android:maxLength="11" />

    <EditText
        android:id="@+id/id_card_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_mobile_et"
        android:layout_marginTop="10dp"
        android:digits="0123456789xyzXYZ"
        android:hint="身份证"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:maxLength="18" />

    <EditText
        android:id="@+id/bank_card_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_card_et"
        android:layout_marginTop="10dp"
        android:hint="银行卡"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:maxLength="19" />

    <TextView
        android:id="@+id/record_no_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bank_card_et"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:textColor="#ff0000" />

    <Button
        android:id="@+id/_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#2fa8fc"
        android:text="确认"
        android:textColor="#ffffff" />
</RelativeLayout>
